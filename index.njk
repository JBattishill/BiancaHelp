---
layout: layouts/base.njk
section: home
---

<div class="home-page">

  <div class="hero">
    <div class="hero__col hero_container">
      <h1 class="hero__title gradient-text">Choose </h1>
      <span class="content__container">
        <ul class="content__container__list">
          <h1 class=" gradient-text content__container__list__item xl:pl-3">Nourish</h1>
          <h1 class=" gradient-text content__container__list__item xl:pl-3">Gluten-Free<h1>
          <h1 class=" gradient-text content__container__list__item xl:pl-3">Vegetarian<h1>
          <h1 class="gradient-text content__container__list__item xl:pl-3">Low Iodine<h1>
          <h1 class=" gradient-text content__container__list__item xl:pl-3">IBS Friendly<h1>            
          <h1 class=" gradient-text content__container__list__item xl:pl-3">Paelo<h1>  
          <h1 class=" gradient-text content__container__list__item xl:pl-3">Nourish<h1>
        </ul>
      </span>
    </div>
    <div class="hero_col">
      <img
        class="hero__image shadow"
        src="{% if home.image %}{{ home.image }}{% else %}https://source.unsplash.com/random/600x600{% endif %}"
        alt="{{ home.image_alt }}"
        width="1000px"
        height="1000px"
        loading="lazy">
    </div>
     {# <div class="hero_subtitle_container">
        {% if home.subtitle %}
        <h2 class="hero__subtitle">{{ home.subtitle }}</h2>
      {% endif %}
      </div> #}
  </div>

  <hr>


  <h2>Recipes</h2>
  {% set projectlist = collections.project %}
  {% include "components/projectlist.njk" %}

  <hr>
  <h2>Recipes</h2>
  {% set postslist = collections.post %}
  {% set show_postslist_tags = false %}
  {% set limit = 3 %}
  {% include "components/postslist.njk" %}
</div>