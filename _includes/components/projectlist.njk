<section>
  <div class="project-grid">
    {% for post in projectlist | reverse %}
      <div class="project-card" {% if post.url == url %} data-current="current item"{% endif %}>
        <div class="hero__col">
         <a href="{{ post.url | url }}"><img
            class="max-h-48 mx-auto mb-2 w-auto shadow rounded"
            src="{% if post.data.image %}{{ post.data.image }}{% else %}https://source.unsplash.com/random/600x600{% endif %}"
            loading="lazy"></a>
        </div>
        <h4 class="text-white font-bold tracking-wide text-xl mb-4">
          <a class="project-card__title" href="{{ post.url | url }}">
            {% if post.data.title %}
              {{ post.data.title }}
            {% else %}
              Recipe Not Found
            {% endif %}
          </a>
        </h4>
        {% if post.data.summary %}
          <p>
            {{ post.data.summary }}
          </p>
        {% endif %}
        {% if post.data.tags %}
          <p class="tag-list">
            {% for tag in post.data.tags %}
              {%- if tag != "project" -%}
                {% set tagUrl %}/project-tags/{{ tag }}/{% endset %}
              <a class="project-card__tag tag" href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
              {%- endif -%}
            {% endfor %}
          </p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>
